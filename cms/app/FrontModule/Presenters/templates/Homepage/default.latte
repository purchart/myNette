{block content}
<div class="card mt-4">
	{if $article->has_picture}
		<img class="card-img-top" src="{$basePath}/images/cms/{$article->id}.jpg?{time()}" alt="{$article->title}">
	{/if}
	<div class="card-body">
		<h3 class="card-title">{$article->title}</h3>
		<h2 class="card-text">{$article->description|noescape}</h2>
	</div>
</div>
{/block}

{block scripts}
	{include parent}
{/block}